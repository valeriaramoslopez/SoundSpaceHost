const express = require('express');
const router = express.Router();

const {
    getProductos,
    getProductosById,
    getProductosByGenero,
    createProducto,
    updateProducto,
    deleteProducto //No se para que se usaria pero x
} = require('../Controladores/dbProductoController');

router.get('/', getProductos);
router.get('/genero/:genero', getProductosByGenero);
router.get('/:id', getProductosById);
router.post('/createProducto', createProducto); //Tienen que estar protegida
router.put('/:id', updateProducto); //Tiene que estar protegida
router.delete('/:id', deleteProducto); //tiene que estar protegida

module.exports = router;